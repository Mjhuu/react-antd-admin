.out-box
  width: 100%
  height: 100%
  overflow: hidden;
  .outer-contain
    width: 100%
    height: 100%
    transition all .2s;
    position: relative;
    overflow: hidden;
    .sider-box
      position: absolute;
      left: 0;
      height: 100%
      user-select none
      overflow-x: hidden;
      overflow-y: auto;
      .logo
        padding: .8rem 1.2rem
        display flex
        align-items center
        justify-content center
        overflow: hidden;
        svg
          height: 5rem
          transition all .2s
    .sider-box::-webkit-scrollbar
      display none

