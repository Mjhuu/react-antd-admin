.login-box
  width: 100%
  height: 100%
  background url("./../images/login-bg.jpg") no-repeat center
  background-size: cover;
  >.login
    width: 40rem
    height: auto
    position: absolute;
    top: 50%
    right: 6rem
    padding: 1.5rem
    transform translateY(-50%)
    border-radius .6rem
    box-shadow 0 0 1rem #282828
    overflow: hidden
    >div
      position: absolute;
      top: 0
      left: 0
      width: 100%
      height: 100%
    >.login-bg
      opacity .9
      background-color: #fff
    >.login-content
      position relative
      >h2
        height: 3.3rem
        font-weight: bold;
        border-bottom: 1px solid #282828
      >a
        font-size: 1.2rem
        padding-left: 1rem
      >.input
        line-height: 4.2rem
