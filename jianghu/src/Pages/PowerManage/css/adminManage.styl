.admin-manage-box
  width: 100%
  >.top
    width: 100%
    >ul
      width: 100%
      display flex
      justify-content center
      flex-wrap wrap
      >li
        margin-left: 1rem
        margin-top: 1rem
        >button
          margin-top: 3rem
        >p
          line-height: 3rem
          margin-bottom: 0
          font-size: 1.2rem
  >nav
    height: 5rem
    line-height: 5rem
    background-color: #fff
  >.admin-list
    height: auto
.add-admin-box
  width: 100%
  >li
    width: 100%
    position relative
    line-height: 4rem
    display flex
    >.left
      flex 3
      min-width 10rem
      max-width 10rem
      text-align right
      position: relative;
    >.right
      flex 7
      position: relative;
.see
  cursor pointer
  color #46a6ff
.red
  cursor pointer
  color #ff4d4f
.department
  color: #fff
  padding: .3rem .4rem
  font-size: 1rem;
  font-weight: 600;
  border-radius: .25rem;
