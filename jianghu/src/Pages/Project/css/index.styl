.project-box
  width: 100%
  height auto
  >.project-nav
    margin-top: 1rem
    height: 10rem
    >ul
      position: relative;
      display flex
      justify-content flex-end
      >li
        position: relative;
        padding: 0 1rem
  >.ani-box
    width: 100%
    height: auto;
    display flex
    flex-wrap wrap

.add-project-box,.edit-userInfo-box
  width: 100%
  >li
    width: 100%
    position relative
    line-height: 4rem
    display flex
    >.left
      flex 3
      min-width 10rem
      max-width 10rem
      text-align right
      font-size: 1.4rem
      position: relative;
    >.right
      flex 7
      position: relative;
      display flex
      align-items center
      >input,>textarea
        max-width 40rem

.m-t-1
  margin-top: 1rem