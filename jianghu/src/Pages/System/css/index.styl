.system-box
  width: 100%
  height: auto
  display flex
  >.left
    flex 3
    padding-right: 2rem
    box-sizing border-box
    >section
      width: 100%
      margin-top: 2rem
      color: #333
      border: .1rem solid #eeeeee
      >h2
        height: 4rem
        line-height: 4rem
        padding 0 2rem
        font-size: 1.5rem
        margin-bottom: 0
        background: #F5f6FA
        border-left: .4rem solid #6d7781;
      >ul
        position relative
        margin-bottom: 0
        >li
          position relative
          display flex
          padding 1rem 2rem
          border-top: .1rem solid #eeeeee
          font-size: 1.3rem
          >.left
            color: #999
          >.right
            margin-left: 1rem
    >section:first-child
      margin-top: 0
  >.right
    flex 6
    padding-left: 2rem
    >section
      width: 100%
      margin-top: 2rem
      color: #333
    >section:first-child
      margin-top: 0
    >section.control
      width: 100%
      >nav
        width: 100%
        height: 5rem
        display flex
        align-items center
        justify-content space-between
      >section
        width: 100%
        margin-top: 1.5rem
        padding: 1.2rem
        border: .1rem solid #D7DEE5;
        background-color: #FFF;
        box-shadow: 0 .1rem .1rem #DDD;
      >section.cpu-box
        height: 26rem
      >section.internet-box
        height: 32rem
      >section.intranet-box
        height: 32rem

    >section.base-status
      display flex
      padding: 2rem 1.2rem
      width: 60%
      height: 15rem
      border: .1rem solid #eeeeee
      >.left
        height: 100%
        flex 4
        max-width 10rem
        display flex
        flex-direction column
        justify-content center
        align-items center
        font-size: 1.3rem
        >svg
          transform scale(.6)
        >p
          position: relative;
          top: -1rem
      >.right
        position: relative;
        height: 100%
        flex 6
        font-size: 1.3rem
        >ul
          position absolute
          top: 50%
          transform translateY(-50%)
          >li
            width: 100%
            position relative